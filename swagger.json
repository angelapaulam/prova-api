{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Catálogo de Filmes Assistidos",
    "version": "1.0.0",
    "description": "API para registro e consulta de usuários e filmes assistidos."
  },
  "paths": {
    "/login": {
      "post": {
        "summary": "Login do usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "login": { "type": "string" },
                  "senha": { "type": "string" }
                },
                "required": ["login", "senha"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Login realizado com sucesso." },
          "400": { "description": "Login e senha obrigatórios." },
          "401": { "description": "Credenciais inválidas." }
        }
      }
    },
    "/registro": {
      "post": {
        "summary": "Registro de usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "login": { "type": "string" },
                  "senha": { "type": "string" }
                },
                "required": ["login", "senha"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Usuário registrado com sucesso." },
          "400": { "description": "Login e senha obrigatórios." },
          "409": { "description": "Usuário já existe." }
        }
      }
    },
    "/usuarios": {
      "get": {
        "summary": "Consulta de usuários",
        "responses": {
          "200": { "description": "Lista de usuários." }
        }
      }
    },
    "/filmes-assistidos": {
      "post": {
        "summary": "Registrar filme assistido",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "titulo": { "type": "string" }
                },
                "required": ["titulo"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Filme registrado como assistido." },
          "400": { "description": "Título obrigatório." },
          "409": { "description": "Filme já registrado." },
          "401": { "description": "Token não informado ou inválido." }
        }
      },
      "get": {
        "summary": "Consulta de filmes assistidos",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Lista de filmes assistidos." },
          "401": { "description": "Token não informado ou inválido." }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}